{
  "mcpServers": {
    "livekit-admin-mcp": {
      "type": "stdio",
      "command": "./vendor/livekit-admin-mcp/livekit-admin-mcp",
      "args": [],
      "env": {}
    },
    "voicemode": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "run",
        "voicemode"
      ],
      "env": {
        "VOICEMODE_SAVE_ALL": "true",
        "XVOICEMODE_DEBUG": "trace",
        "CHATTA_AUDIO_FEEDBACK": "true",
        "VOICEMODE_AUDIO_FEEDBACK": "true",
        "CHATTA_DISABLE_SILENCE_DETECTION": "false",
        "CHATTA_VAD_AGGRESSIVENESS": "1",
        "CHATTA_SILENCE_THRESHOLD_MS": "1200",
        "CHATTA_MIN_RECORDING_DURATION": "0.3",
        "CHATTA_INITIAL_SILENCE_GRACE_PERIOD": "2.0"
      }
    }
  }
}
