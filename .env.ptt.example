# CHATTA Push-to-Talk Configuration
# Copy this to ~/.chatta/.env or include in your main .env file

# ============================================================================
# Core PTT Settings
# ============================================================================

# Enable/disable PTT globally
CHATTA_PTT_ENABLED=false

# Default key combination (examples: "down+right", "ctrl+space", "f13")
CHATTA_PTT_KEY_COMBO="down+right"

# PTT mode: hold (record while keys held), toggle (press to start/stop), hybrid
CHATTA_PTT_MODE="hold"

# Maximum recording duration in seconds
CHATTA_PTT_TIMEOUT=120.0

# ============================================================================
# Behavior Settings
# ============================================================================

# Auto-enable PTT when using local transport
CHATTA_PTT_AUTO_ENABLE=false

# Require all keys to be pressed together
CHATTA_PTT_REQUIRE_BOTH_KEYS=true

# Delay before stopping recording after key release (debounce, in seconds)
CHATTA_PTT_RELEASE_DELAY=0.1

# Minimum recording duration in seconds
CHATTA_PTT_MIN_DURATION=0.5

# ============================================================================
# Audio Feedback
# ============================================================================

# Play PTT-specific audio feedback sounds
CHATTA_PTT_AUDIO_FEEDBACK=true

# Volume for PTT feedback sounds (0.0 to 1.0)
CHATTA_PTT_FEEDBACK_VOLUME=0.7

# Show visual feedback indicators in terminal
CHATTA_PTT_VISUAL_FEEDBACK=true

# ============================================================================
# Advanced Settings
# ============================================================================

# Key to cancel recording (usually "escape")
CHATTA_PTT_CANCEL_KEY="escape"

# Buffer audio before key press (experimental)
CHATTA_PTT_BUFFER_PRE_RECORDING=false

# Pre-recording buffer duration in seconds
CHATTA_PTT_BUFFER_DURATION=0.5

# Ignore keyboard key repeat events
CHATTA_PTT_KEY_REPEAT_IGNORE=true

# ============================================================================
# Platform-Specific Settings
# ============================================================================

# macOS: Check for accessibility permissions on startup
CHATTA_PTT_MACOS_ACCESSIBILITY_CHECK=true

# Windows: Hook type (low_level or high_level)
CHATTA_PTT_WINDOWS_HOOK_TYPE="low_level"

# Linux: Input method (x11, wayland, or auto)
CHATTA_PTT_LINUX_INPUT_METHOD="auto"

# ============================================================================
# Debug & Development
# ============================================================================

# Enable PTT debug logging
CHATTA_PTT_DEBUG=false

# Log all keyboard events (WARNING: verbose, debug only)
CHATTA_PTT_LOG_KEYS=false

# Simulate PTT without actual keyboard (testing only)
CHATTA_PTT_SIMULATE=false
